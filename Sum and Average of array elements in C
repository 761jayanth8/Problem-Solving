#include<stdio.h>

int main(){
    int n,i,arr[100],sum=0;
    float avg;
    printf("Enter the number of elements");
    scanf("%d",&n);
    //input the array
    for(i=0;i<n;i++)
        scanf("%d",&arr[i]);
    //calculate the sum
    for(i=0;i<n;i++)
        sum+=arr[i];
    //calculate the avg
    avg = (float)sum/n;
    printf("The sum and average of the array elements are:\n %d\t%f\n",sum,avg);
    return 0;
}